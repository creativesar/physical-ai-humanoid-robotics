/**
 * Custom CSS for Physical AI & Humanoid Robotics Textbook
 * Premium futuristic styling
 */

/* Dark theme base with neon accents */
:root {
  --ifm-color-primary: #00d0ff;
  --ifm-color-primary-dark: #00bde0;
  --ifm-color-primary-darker: #00aacc;
  --ifm-color-primary-darkest: #0088aa;
  --ifm-color-primary-light: #1ad6ff;
  --ifm-color-primary-lighter: #33ddff;
  --ifm-color-primary-lightest: #66eaff;
  --ifm-color-secondary: #0088ff;
  --ifm-color-secondary-dark: #0066cc;
  --ifm-background-color: #000000;
  --ifm-background-surface-color: #0a0a0a;
  --ifm-navbar-background-color: rgba(0, 0, 0, 0.95);
  --ifm-footer-background-color: #000000;
  --ifm-code-font-size: 95%;
  --docusaurus-highlighted-code-line-bg: rgba(0, 208, 255, 0.15);
}

/* Dark mode theme (default for this theme) */
[data-theme='dark'] {
  --ifm-color-primary: #00d0ff;
  --ifm-color-primary-dark: #00bde0;
  --ifm-color-primary-darker: #00aacc;
  --ifm-color-primary-darkest: #0088aa;
  --ifm-color-primary-light: #1ad6ff;
  --ifm-color-primary-lighter: #33ddff;
  --ifm-color-primary-lightest: #66eaff;
  --ifm-background-color: #000000;
  --ifm-background-surface-color: #0a0a0a;
  --ifm-navbar-background-color: rgba(0, 0, 0, 0.95);
  --ifm-footer-background-color: #000000;
  --docusaurus-highlighted-code-line-bg: rgba(0, 208, 255, 0.2);
}

/* Premium gradients and neon effects */
.hero--primary {
  background: linear-gradient(135deg, #000000 0%, #0a0a0a 100%);
}

/* Custom scrollbar for premium feel */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: #0a0a0a;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(45deg, #00d0ff, #0088ff);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(45deg, #00ffff, #00d0ff);
}

/* Neon button styles */
.button--cyan {
  background: linear-gradient(135deg, #00d0ff, #0088ff);
  border: none;
  color: white;
  transition: all 0.3s ease;
  box-shadow: 0 0 15px rgba(0, 208, 255, 0.3);
}

.button--cyan:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 20px rgba(0, 208, 255, 0.5);
  background: linear-gradient(135deg, #00ffff, #00d0ff);
}

/* Premium card styling */
.card--cyan {
  background: linear-gradient(135deg, #0f0f0f, #1a1a1a);
  border: 1px solid rgba(0, 208, 255, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.card--cyan:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 208, 255, 0.2);
  border-color: rgba(0, 208, 255, 0.4);
}

/* Navigation styling */
.navbar {
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(0, 208, 255, 0.1);
}

.navbar__item,
.navbar__link {
  color: #e2e8f0;
  transition: color 0.3s ease;
}

.navbar__item:hover,
.navbar__link:hover {
  color: #00d0ff;
}

/* Footer styling */
.footer {
  background: linear-gradient(135deg, #000000 0%, #0a0a0a 100%);
  border-top: 1px solid rgba(0, 208, 255, 0.1);
}

.footer__link-item {
  transition: color 0.3s ease;
}

.footer__link-item:hover {
  color: #00d0ff !important;
}

/* Code block styling for premium look */
.docusaurus-highlight-code-line {
  background-color: rgba(0, 208, 255, 0.15);
  display: block;
  margin: 0 calc(-1 * var(--ifm-pre-padding));
  padding: 0 var(--ifm-pre-padding);
}

/* Custom heading styles */
h1, h2, h3, h4, h5, h6 {
  background: linear-gradient(135deg, #ffffff, #00d0ff, #0088ff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
}

/* Premium link styling */
a {
  transition: color 0.3s ease;
}

a:hover {
  color: #00d0ff !important;
}

/* Section dividers */
.section-divider {
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(0, 208, 255, 0.3), transparent);
  margin: 2rem 0;
}

/* Premium table styling */
table {
  border: 1px solid rgba(0, 208, 255, 0.2);
  border-radius: 8px;
  overflow: hidden;
}

th, td {
  border: 1px solid rgba(0, 208, 255, 0.1);
}

th {
  background: rgba(0, 208, 255, 0.1);
}

/* Premium blockquote styling */
blockquote {
  border-left: 3px solid #00d0ff;
  background: rgba(0, 208, 255, 0.05);
  padding: 1rem 1.5rem;
  border-radius: 0 8px 8px 0;
  font-style: italic;
}

/* Premium callout boxes */
.alert--cyan {
  background: rgba(0, 208, 255, 0.1);
  border: 1px solid rgba(0, 208, 255, 0.3);
  border-left: 4px solid #00d0ff;
}

/* Custom animations */
@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0px); }
}

@keyframes pulse-glow {
  0% { box-shadow: 0 0 0 0 rgba(0, 208, 255, 0.4); }
  70% { box-shadow: 0 0 0 15px rgba(0, 208, 255, 0); }
  100% { box-shadow: 0 0 0 0 rgba(0, 208, 255, 0); }
}

@keyframes scanline {
  0% {
    transform: translateY(-100%);
  }
  100% {
    transform: translateY(100vh);
  }
}

.float-element {
  animation: float 6s ease-in-out infinite;
}

.pulse-glow {
  animation: pulse-glow 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* Responsive improvements */
@media (max-width: 996px) {
  .navbar-sidebar {
    background: linear-gradient(135deg, #000000 0%, #0a0a0a 100%);
  }

  .menu {
    background: #0a0a0a;
  }

  .menu__link {
    color: #e2e8f0;
  }

  .menu__link:hover {
    color: #00d0ff;
    background: rgba(0, 208, 255, 0.1);
  }
}

/* Premium typography */
html {
  font-family: 'Inter', 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* Urdu/Arabic font support */
html[lang="ur"],
html[lang="ar"],
.urdu-text,
[dir="rtl"] {
  font-family: 'Noto Nastaliq Urdu', 'Noto Naskh Arabic', 'Arial Unicode MS', 'Traditional Arabic', 'Jameel Noori Nastaleeq', sans-serif;
}

/* RTL support for Urdu content */
[dir="rtl"] {
  direction: rtl;
  text-align: right;
}

[dir="rtl"] .markdown {
  direction: rtl;
  text-align: right;
}

[dir="rtl"] h1,
[dir="rtl"] h2,
[dir="rtl"] h3,
[dir="rtl"] h4,
[dir="rtl"] h5,
[dir="rtl"] h6 {
  text-align: right;
  direction: rtl;
}

[dir="rtl"] p,
[dir="rtl"] li,
[dir="rtl"] td,
[dir="rtl"] th {
  text-align: right;
  direction: rtl;
}

[dir="rtl"] blockquote {
  border-left: none;
  border-right: 3px solid #00d0ff;
  border-radius: 8px 0 0 8px;
}

[dir="rtl"] ul,
[dir="rtl"] ol {
  padding-right: 2rem;
  padding-left: 0;
}

/* Fix code blocks in RTL */
[dir="rtl"] pre,
[dir="rtl"] code {
  direction: ltr;
  text-align: left;
}

/* Urdu-specific styling */
.urdu-content {
  font-size: 1.15em;
  line-height: 2.2;
  letter-spacing: 0.02em;
}

.urdu-content p {
  margin-bottom: 1.5rem;
}

.urdu-content h1,
.urdu-content h2,
.urdu-content h3,
.urdu-content h4,
.urdu-content h5,
.urdu-content h6 {
  margin-top: 2rem;
  margin-bottom: 1rem;
  font-weight: 700;
}

/* Better spacing for Urdu lists */
.urdu-content ul,
.urdu-content ol {
  margin-right: 2rem;
  margin-left: 0;
}

.urdu-content li {
  margin-bottom: 0.75rem;
}

/* Fix table alignment in RTL */
[dir="rtl"] table {
  text-align: right;
}

[dir="rtl"] thead {
  text-align: right;
}

/* Fix navbar in RTL mode */
[dir="rtl"] .navbar__item {
  margin-left: 0;
  margin-right: 0.5rem;
}

/* Fix sidebar in RTL mode */
[dir="rtl"] .sidebar {
  border-left: none;
  border-right: 1px solid rgba(0, 208, 255, 0.1);
}

/* Custom sidebar styling */
.sidebar {
  background: rgba(15, 15, 15, 0.8);
  backdrop-filter: blur(10px);
}

.sidebar__item {
  transition: all 0.3s ease;
}

.sidebar__item:hover {
  color: #00d0ff;
  transform: translateX(5px);
}

/* Premium search styling */
.search-bar {
  background: rgba(255, 255, 255, 0.05) !important;
  border: 1px solid rgba(0, 208, 255, 0.2) !important;
  border-radius: 8px !important;
  transition: all 0.3s ease !important;
}

.search-bar:focus {
  border-color: #00d0ff !important;
  box-shadow: 0 0 0 3px rgba(0, 208, 255, 0.2) !important;
}

/* Premium pagination */
.pagination-nav__link {
  background: rgba(15, 15, 15, 0.8);
  border: 1px solid rgba(0, 208, 255, 0.2);
  transition: all 0.3s ease;
}

.pagination-nav__link:hover {
  border-color: #00d0ff;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0, 208, 255, 0.2);
}

/* Custom button styling */
.button {
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
}

/* Premium tag styling */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  background: rgba(0, 208, 255, 0.1);
  border: 1px solid rgba(0, 208, 255, 0.3);
  color: #00d0ff;
  transition: all 0.3s ease;
}

.tag:hover {
  background: rgba(0, 208, 255, 0.2);
  transform: translateY(-2px);
}

/* Homepage specific styling */
.homepage-section {
  position: relative;
  padding: 4rem 1rem;
}

.homepage-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 10% 20%, rgba(0, 208, 255, 0.05) 0%, transparent 20%),
    radial-gradient(circle at 90% 80%, rgba(0, 136, 255, 0.05) 0%, transparent 20%);
  pointer-events: none;
  z-index: 0;
}

.homepage-section-content {
  position: relative;
  z-index: 1;
}

/* Premium button styles for homepage */
.homepage-button {
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.homepage-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
  z-index: -1;
}

.homepage-button:hover::before {
  left: 100%;
}
